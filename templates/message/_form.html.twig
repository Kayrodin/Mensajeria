{{ form_start(form) }}

{{ form_row(form.recipients) }}

<div class="form-group mx-auto w-75">
    <select class="form-control w-50 float-left" id="new_recipient">
        <option value=""> --Select recipient--</option>
        {% for user in users %}
            <option value="{{ user.id }}">{{ user.name }}</option>
        {% endfor %}
    </select>
    <button class="btn btn-outline-success my-2 my-sm-0 float-left" type="button" onclick="add()"><i
                class="fas fa-plus"></i></button>
    <input class="btn btn-outline-success my-2 my-sm-0 float-left" type="button" onclick="clearRecipient()"
           value="Clear">
    <input type="text" id="recipient"
           class="form-control"
           placeholder="Recipients" readonly aria-describedby="Help">
    <small id="Help" class="form-text text-muted">Add all message recipients on this site, you can also add
        groups to the message</small>
</div>

<div class="container">
    {{ form_row(form.subject) }}
    {{ form_row(form.content) }}
    {{ form_row(form.attachments) }}

    <button class="btn">{{ button_label|default('Save') }}</button>
</div>

{{ form_end(form) }}
